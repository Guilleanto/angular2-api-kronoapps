{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom", 
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipTemplateCodegen": true,
    "stricMetadataEmit": true
  }
}